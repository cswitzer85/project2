    <!-- add modal-dialog text-center inside class-->
    <div class="container text-center">
        <div class="row d-flex justify-content-right">

                    <div class="col-md-4">
                        <div class="card">
                            <div id="cityList" class="card-body">
                                <h5 class="card-title">Restaurants by city</h5>
                                
                                <input type="cityName" class="form-control mb-3" id="cityInput" placeholder="City name" />
